{
  "info": {
    "name": "Meri Dukaan POS + Admin Analytics",
    "description": "API collection for Meri Dukaan POS and Admin Analytics endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "storeId",
      "value": "",
      "type": "string"
    },
    {
      "key": "workerId",
      "value": "",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('token', jsonData.access_token);",
                  "    if (jsonData.user.role === 'ADMIN') {",
                  "        pm.collectionVariables.set('adminToken', jsonData.access_token);",
                  "    }",
                  "    pm.collectionVariables.set('workerId', jsonData.user.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"sales1@meridukaan.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Login as Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('adminToken', jsonData.access_token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@meridukaan.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "POS Operations",
      "item": [
        {
          "name": "Scan Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"storeId\": \"{{storeId}}\",\n  \"qrValue\": \"COKE-330ML\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/pos/scan",
              "host": ["{{baseUrl}}"],
              "path": ["pos", "scan"]
            }
          }
        },
        {
          "name": "Create Invoice",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Idempotency-Key",
                "value": "optional-unique-key-{{$randomUUID}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"storeId\": \"{{storeId}}\",\n  \"workerId\": \"{{workerId}}\",\n  \"items\": [\n    {\n      \"productId\": \"{{productId}}\",\n      \"qty\": 5\n    }\n  ],\n  \"clientInvoiceRef\": \"REF-{{$randomInt}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/pos/invoices",
              "host": ["{{baseUrl}}"],
              "path": ["pos", "invoices"]
            }
          }
        },
        {
          "name": "Get Invoice",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/pos/invoices/:invoiceId",
              "host": ["{{baseUrl}}"],
              "path": ["pos", "invoices", ":invoiceId"],
              "variable": [
                {
                  "key": "invoiceId",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Get Invoice PDF",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/pos/invoices/:invoiceId/pdf",
              "host": ["{{baseUrl}}"],
              "path": ["pos", "invoices", ":invoiceId", "pdf"],
              "variable": [
                {
                  "key": "invoiceId",
                  "value": ""
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Analytics",
      "item": [
        {
          "name": "Get Filters",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/filters",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "filters"]
            }
          }
        },
        {
          "name": "Get Analytics Summary",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/analytics/summary?from=2024-01-01&to=2024-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "analytics", "summary"],
              "query": [
                {
                  "key": "from",
                  "value": "2024-01-01"
                },
                {
                  "key": "to",
                  "value": "2024-12-31"
                },
                {
                  "key": "region",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "city",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "storeId",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "categoryId",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "manufacturerId",
                  "value": "",
                  "disabled": true
                },
                {
                  "key": "brandId",
                  "value": "",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Sales Trend",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/analytics/sales-trend?from=2024-01-01&to=2024-12-31&bucket=daily",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "analytics", "sales-trend"],
              "query": [
                {
                  "key": "from",
                  "value": "2024-01-01"
                },
                {
                  "key": "to",
                  "value": "2024-12-31"
                },
                {
                  "key": "bucket",
                  "value": "daily",
                  "description": "daily or weekly"
                }
              ]
            }
          }
        },
        {
          "name": "Get Brand Distribution",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/analytics/brand-distribution?from=2024-01-01&to=2024-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "analytics", "brand-distribution"],
              "query": [
                {
                  "key": "from",
                  "value": "2024-01-01"
                },
                {
                  "key": "to",
                  "value": "2024-12-31"
                }
              ]
            }
          }
        },
        {
          "name": "Get Market Share",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/analytics/market-share?metric=value&from=2024-01-01&to=2024-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "analytics", "market-share"],
              "query": [
                {
                  "key": "metric",
                  "value": "value",
                  "description": "value or volume"
                },
                {
                  "key": "from",
                  "value": "2024-01-01"
                },
                {
                  "key": "to",
                  "value": "2024-12-31"
                }
              ]
            }
          }
        },
        {
          "name": "Get Brands",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/analytics/brands?page=1&pageSize=10&sort=salesValue",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "analytics", "brands"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "10"
                },
                {
                  "key": "sort",
                  "value": "salesValue"
                }
              ]
            }
          }
        },
        {
          "name": "Get Top SKUs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/analytics/top-skus?limit=10&from=2024-01-01&to=2024-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "analytics", "top-skus"],
              "query": [
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "from",
                  "value": "2024-01-01"
                },
                {
                  "key": "to",
                  "value": "2024-12-31"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}

